// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int       @id @default(autoincrement())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  updated_at DateTime? @default(dbgenerated("CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3)")) @db.DateTime(3)

  @@map("cad_user")
}

model Car {
  id          Int          @id @default(autoincrement())
  description String
  plate       String
  created_at  DateTime?    @default(now())
  updated_at  DateTime?    @default(dbgenerated("CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3)")) @db.DateTime(3)
  services    ServiceCar[]
  image       Image[]

  @@map("cad_car")
}

model ServiceCar {
  id         Int       @id @default(autoincrement())
  price      Decimal   @db.Decimal(9, 2)
  created_at DateTime? @default(now())
  updated_at DateTime? @default(dbgenerated("CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3)")) @db.DateTime(3)

  car           Car                @relation(fields: [car_id], references: [id])
  car_id        Int
  serviceDetail ServiceDetailCar[]

  @@map("cad_service_car")
}

model ServiceDetailCar {
  id          Int       @id @default(autoincrement())
  description String
  price       Decimal   @db.Decimal(9, 2)
  created_at  DateTime? @default(now())
  updated_at  DateTime? @default(dbgenerated("CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3)")) @db.DateTime(3)

  service    ServiceCar @relation(fields: [service_id], references: [id])
  service_id Int
  image      Image[]

  @@map("cad_service_detail")
}

model Image {
  id         Int       @id @default(autoincrement())
  name       String
  before     Boolean?
  created_at DateTime? @default(now())
  updated_at DateTime? @default(dbgenerated("CURRENT_TIMESTAMP(3) ON UPDATE CURRENT_TIMESTAMP(3)")) @db.DateTime(3)

  serviceDetail     ServiceDetailCar? @relation(fields: [service_detail_id], references: [id])
  service_detail_id Int?

  car    Car? @relation(fields: [car_id], references: [id])
  car_id Int?

  @@map("cad_image")
}
